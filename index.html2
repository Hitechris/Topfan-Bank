<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Topfan Bank Dashboard</title>
  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
      font-family: 'Segoe UI', sans-serif;
    }

    body {
      background: url('IMG_2494.jpeg') no-repeat center center fixed;
      background-size: cover;
      color: white;
      min-height: 100vh;
      backdrop-filter: blur(4px);
    }

    header {
      background: rgba(0, 0, 0, 0.85);
      padding: 20px;
      text-align: center;
      font-size: 2rem;
      font-weight: bold;
      color: #00BFFF;
      border-bottom: 2px solid white;
    }

    .dashboard {
      max-width: 1200px;
      margin: 30px auto;
      padding: 20px;
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 20px;
    }

    .balance-card, .feature-card {
      background: rgba(0, 0, 0, 0.5);
      border-radius: 10px;
      padding: 20px;
      text-align: center;
      color: #fff;
      border: 1px solid rgba(255, 255, 255, 0.2);
      transition: 0.3s ease;
    }

    .balance-card {
      border-left: 5px solid #00BFFF;
    }

    .balance-card h3 {
      font-size: 1.2rem;
      margin-bottom: 10px;
    }

    .balance-card p {
      font-size: 1.6rem;
      font-weight: bold;
    }

    .feature-card:hover {
      background-color: rgba(0, 191, 255, 0.3);
      transform: scale(1.05);
    }

    .feature-card a {
      text-decoration: none;
      color: white;
      font-weight: bold;
      display: inline-block;
      margin-top: 10px;
      padding: 6px 14px;
      background: #00BFFF;
      border-radius: 5px;
    }

    @media (max-width: 768px) {
      .dashboard {
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
      }
    }
  </style>
</head>
<body>

  <header>Topfan Bank Dashboard</header>

  <div class="dashboard">
    <!-- Balances -->
    <div class="balance-card">
      <h3>Checking Balance</h3>
      <p>$5,200.75</p>
    </div>
    <div class="balance-card">
      <h3>Savings Balance</h3>
      <p>$12,480.00</p>
    </div>

    <!-- Class 1 -->
    <div class="feature-card">
      <div>Transfer Money</div>
      <a href="transfer.html">Go</a>
    </div>
    <div class="feature-card">
      <div>Transaction History</div>
      <a href="transaction.html">View</a>
    </div>

    <!-- Class 2 -->
    <div class="feature-card">
      <div>Account Summary</div>
      <a href="summary.html">Open</a>
    </div>
    <div class="feature-card">
      <div>ATM Locator</div>
      <a href="atm.html">Locate</a>
    </div>
    <div class="feature-card">
      <div>Pay Bills</div>
      <a href="paybills.html">Pay Now</a>
    </div>
    <div class="feature-card">
      <div>Notifications</div>
      <a href="notifications.html">Check</a>
    </div>

    <!-- Class 3 -->
    <div class="feature-card">
      <div>Profile</div>
      <a href="profile.html">Manage</a>
    </div>
    <div class="feature-card">
      <div>Settings</div>
      <a href="settings.html">Edit</a>
    </div>
    <div class="feature-card">
      <div>Credit Card</div>
      <a href="creditcard.html">Access</a>
    </div>
    <div class="feature-card">
      <div>Loan Info</div>
      <a href="loan.html">View</a>
    </div>

    <!-- Class 4 -->
    <div class="feature-card">
      <div>Security Activity</div>
      <a href="security.html">Check</a>
    </div>
    <div class="feature-card">
      <div>Support</div>
      <a href="support.html">Help</a>
    </div>
    <div class="feature-card">
      <div>Investment</div>
      <a href="investment.html">Track</a>
    </div>
    <div class="feature-card">
      <div>Logout</div>
      <a href="logout.html">Exit</a>
    </div>
  </div>

</body>
</html>
